<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llseleccionTarjeta"
        android:layout_width="100dp"
        android:layout_height="170dp"
        android:background="#fddc00"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/caracteristicasbackground"
            android:gravity="center"
            android:onClick="clickTarjeta"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivFotoPersonaje"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_gravity="top|center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/adriana" />

            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/tvNombrePersonaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:maxLines="1"
                android:text="Me vale madre "
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>