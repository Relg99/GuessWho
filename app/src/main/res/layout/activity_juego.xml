<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity_juego">




<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/juegoLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dimensionesFoto"
                android:orientation="vertical"
                android:background="#ff0000"
                >

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivMiPersonaje"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/adriana" />

                <TextView
                    android:id="@+id/tvMiPersonaje"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.10"
                    android:gravity="center|bottom"
                    android:text="Adriana"

                    android:autoSizeTextType="uniform"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/bGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Button" />

            <Button
                android:id="@+id/bTez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Button" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
            <Button
                android:id="@+id/bPelo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:text="" />
    <Button
        android:id="@+id/bPeloChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="" />
</LinearLayout>

            <Button
                android:id="@+id/bOjos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Button" />

            <Button
                android:id="@+id/bLentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/bEstudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/bAdivinar"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Button" />

                <Button
                    android:id="@+id/bSalir"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Button" />

            </LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/tvElige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Elige ->" />

    <Button
        android:id="@+id/bConfirmar"
        android:onClick="startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Aceptar" />
</RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutRecyler"
    android:clickable="true"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTablero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"

        />
</LinearLayout>



</LinearLayout>